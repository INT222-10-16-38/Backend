generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model artists {
  art_id   Int     @id @default(autoincrement())
  art_name String  @db.VarChar(45)
  art_type String  @db.VarChar(45)
  album    album[]
}

model board {
  b_id          Int     @id @default(autoincrement())
  b_title       String  @db.VarChar(100)
  b_caption     String  @db.VarChar(1000)
  b_image       String? @db.VarChar(2000)
  account_ac_id Int
  account       account @relation(fields: [account_ac_id], references: [ac_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([account_ac_id], name: "fk_board_account1_idx")
}

model album {
  a_id           Int        @id @default(autoincrement())
  a_name         String     @db.VarChar(45)
  price          Decimal    @db.Decimal(6, 2)
  description    String     @db.VarChar(2000)
  release_date   DateTime   @db.Date
  cover_image    String     @db.VarChar(2000)
  preview_image  String     @db.VarChar(2000)
  artists_art_id Int
  artists        artists    @relation(fields: [artists_art_id], references: [art_id], onDelete: Cascade, onUpdate: NoAction)
  favorite       favorite[]

  @@index([artists_art_id], name: "fk_album_artists_idx")
}

model account {
  ac_id       Int        @id @default(autoincrement())
  ac_username String     @db.VarChar(100)
  ac_password String     @db.VarChar(255)
  ac_email    String     @db.VarChar(45)
  ac_fname    String     @db.VarChar(45)
  ac_lname    String     @db.VarChar(45)
  ac_image    String     @db.VarChar(2000)
  ac_role     String?    @db.VarChar(45)
  board       board[]
  favorte     favorite[]
}

model favorite {
  fav_id        Int     @id @default(autoincrement())
  album_a_id    Int
  account_ac_id Int
  account       account @relation(fields: [account_ac_id], references: [ac_id], onDelete: Cascade, onUpdate: NoAction)
  album         album   @relation(fields: [album_a_id], references: [a_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([account_ac_id], name: "fk_album_has_account_account1_idx")
  @@index([album_a_id], name: "fk_album_has_account_album1_idx")
}
