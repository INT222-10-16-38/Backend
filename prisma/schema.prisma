datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model artists {
    art_id   Int     @id @default(dbgenerated())
    art_name String
    art_type String
    album    album[]
}

model board {
    b_id          Int     @id @default(dbgenerated())
    b_title       String
    b_caption     String
    b_image       String
    account_ac_id Int
    account       account @relation(fields: [account_ac_id], references: [ac_id])
}

model album {
    a_id           Int        @id @default(dbgenerated())
    a_name         String
    price          Decimal
    description    String
    release_date   DateTime   @db.Date
    cover_image    String
    preview_image  String
    favorite       favorite[]
    artists_art_id Int
    artists        artists    @relation(fields: [artists_art_id], references: [art_id])
}

model account {
    ac_id       Int        @id @default(dbgenerated())
    ac_username String
    ac_password String
    ac_email    String
    ac_fname    String
    ac_lname    String
    ac_image    String
    ac_role     String
    board       board[]
    favorte     favorite[]
}

model favorite {
    fav_id        Int     @id @default(dbgenerated())
    album_a_id    Int
    account_ac_id Int
    album         album   @relation(fields: [album_a_id], references: [a_id])
    account       account @relation(fields: [account_ac_id], references: [ac_id])
}
